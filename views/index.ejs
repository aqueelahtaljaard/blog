<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- BOOTSTRAP Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
  <body>
    <ul class="nav nav-pills">
      <li><img src="images/logo.jpg"></li>
      <li role="presentation" class="active"><a href="/">Home</a></li>
      <li role="presentation"><a href="posts">Archived</a></li>
      <li role="presentation"><a href="new">Post</a></li>
      <button type="button" class="btn btn-default navbar-btn"><a href="signup"> SIGN OUT</a></button>
    </ul>
    <div class="container">
      <div class="row">

        <h1>MOST RECENT:</h1>
      </div>


      <div class="row">
        <% if (posts.length !=0) { %>
          <% posts.forEach(function(post){ %>
            <div class="col-xs-12 col-md-6 col-lg-4">
              <div class="panel panel-primary">

                <div class="panel-heading">
                  <h3 class="panel-title"><%= post.title %></h3>
                  <h3 class="panel-title"><%= post.datetime %></h3>
                </div>

                <div class="panel-body">
                  <%- post.briefcontent %>
                </div>

                <div class="panel-footer">
                  <p><%= post.author %></p>
                  <a href="/view/<%= post.id %>"><button type="button" name="button"> Read more</button></a>
                  <a href="/edit/<%= post.id %>"> <button type="button" name="button">Edit</button></a>
                  <a href="/delete/<%= post.id %>"><button type="button" name="button"> Delete</button></a>


                </div>
            </div>

        </div>
        <% }); %>

        <%  } else{ %>
          <p>You have no blog posts</p>
        <% } %>
      </div>
    </div>


  </body>
</html>
